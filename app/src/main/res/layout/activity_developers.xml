<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:padding="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:theme="@style/ThemeOverlay.AppCompat">

        <TextView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/madefor"
            android:textColor="#757575"
            android:textSize="20sp" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/sajal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardPreventCornerOverlap="false"
                app:strokeColor="@color/grey"
                app:strokeWidth="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="#dddddd"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ramankit_banner_min" />

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="55dp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="95dp"
                        android:layout_toRightOf="@id/dp"
                        android:fontFamily="@font/circularstd_book"
                        android:padding="16dp"
                        android:text="@string/ramankit"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/ramankit_bio" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bio"
                        android:layout_margin="16dp"
                        android:weightSum="3">


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/email"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#00ffffff"
                            android:fontFamily="@font/circularstd_book"
                            android:onClick="sendEmail"
                            android:text="@string/email"
                            android:textColor="@color/colorAccent"
                            app:strokeWidth="0dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/github"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#00ffffff"
                            android:fontFamily="@font/circularstd_book"
                            android:onClick="openGithub"
                            android:text="@string/github"
                            android:textColor="@color/colorAccent"
                            app:strokeWidth="0dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/gplus"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#00ffffff"
                            android:fontFamily="@font/circularstd_book"
                            android:onClick="openGplus"
                            android:text="@string/gplus"
                            android:textColor="@color/colorAccent"
                            app:strokeWidth="0dp"

                            />

                    </LinearLayout>

                </RelativeLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ramankit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sajal"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="0dp"
                app:cardPreventCornerOverlap="false"
                app:strokeColor="@color/grey"
                app:strokeWidth="0dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/banner2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="#dddddd"
                        android:scaleType="centerCrop" />

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/dp2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="55dp" />

                    <TextView
                        android:id="@+id/name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="95dp"
                        android:layout_toRightOf="@id/dp2"
                        android:fontFamily="@font/circularstd_book"
                        android:padding="16dp"
                        android:text="@string/sajal"
                        android:textSize="20sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/bio2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/dp2"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/sajal_bio" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bio2"
                        android:layout_margin="16dp"
                        android:weightSum="3">


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/email2"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#00ffffff"
                            android:fontFamily="@font/circularstd_book"
                            android:onClick="sendEmail"
                            android:text="@string/email"
                            android:textColor="@color/colorAccent"
                            app:strokeWidth="0dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/github2"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#00ffffff"
                            android:fontFamily="@font/circularstd_book"
                            android:onClick="openGithub"
                            android:text="@string/github"
                            android:textColor="@color/colorAccent"
                            app:strokeWidth="0dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/gplus2"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#00ffffff"
                            android:fontFamily="@font/circularstd_book"
                            android:onClick="openGplus"
                            android:text="@string/gplus"
                            android:textColor="@color/colorAccent"
                            app:strokeWidth="0dp" />

                    </LinearLayout>
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>